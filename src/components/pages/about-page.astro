---
import BaseLayout from "~/layouts/base-layout.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={t("about.title")} description={t("about.description")} lang={lang}>
  <section class="hero-shell">
    <div class="hero-glow" aria-hidden="true"></div>

    <header class="space-y-6 text-center">
      <h1 class="sr-only">{t("about.heading")}</h1>
      <p class="gradient-text text-5xl font-extrabold tracking-tight sm:text-6xl" aria-hidden="true">
        {t("about.heading")}
      </p>
    </header>

    <section class="mt-12">
      <article class="glass-card overflow-hidden p-0">
        <div class="grid lg:grid-cols-2 lg:items-stretch">
          <div class="space-y-4 p-6 sm:p-8">
            <p class="text-offset">{t("about.p1")}</p>
            <p class="text-offset">{t("about.p2")}</p>
          </div>

          <div class="border-default lg:border-l lg:border-t-0 border-t">
            <img
              src="/images/about.webp"
              alt={t("about.heading")}
              loading="lazy"
              decoding="async"
              class="h-56 w-full object-cover sm:h-64 lg:h-full lg:min-h-[360px]"
            />
          </div>
        </div>
      </article>
    </section>
  </section>
</BaseLayout>


