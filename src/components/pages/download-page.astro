---
import BaseLayout from "~/layouts/base-layout.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// TODO: Replace these URLs with real download links.
const DOWNLOAD_NEW_URL = "#";
const DOWNLOAD_LEGACY_URL = "#";
---

<BaseLayout
  title={t("download.title")}
  description={t("download.description")}
  lang={lang}
>
  <section class="hero-shell">
    <div class="hero-glow" aria-hidden="true"></div>

    <header class="space-y-6 text-center">
      <h1 class="sr-only">{t("download.heading")}</h1>
      <p class="gradient-text text-5xl font-extrabold tracking-tight sm:text-6xl" aria-hidden="true">
        {t("download.heading")}
      </p>
      <p class="mx-auto max-w-3xl text-base text-offset sm:text-lg">
        {t("download.lead")}
      </p>
      <div class="flex flex-wrap justify-center gap-4 pt-2">
        <a
          class="btn rounded-full border border-default bg-offset px-6 py-3 text-sm font-semibold"
          href={DOWNLOAD_NEW_URL}
          target="_blank"
          rel="noopener noreferrer"
        >
          {t("download.cta.new")}
        </a>
        <a
          class="btn rounded-full border border-default px-6 py-3 text-sm font-semibold"
          href={DOWNLOAD_LEGACY_URL}
          target="_blank"
          rel="noopener noreferrer"
        >
          {t("download.cta.legacy")}
        </a>
      </div>
    </header>

    <section class="mt-12 grid gap-6 md:grid-cols-2">
      <article class="glass-card space-y-4">
        <div class="accent-line" aria-hidden="true"></div>
        <h2 class="mt-4 text-xl font-bold sm:text-2xl">{t("download.contents.title")}</h2>
        <ul class="list-disc space-y-2 pl-6 text-offset">
          <li>{t("download.contents.b1")}</li>
          <li>{t("download.contents.b2")}</li>
          <li>{t("download.contents.b3")}</li>
        </ul>
      </article>

      <article class="glass-card space-y-3">
        <div class="accent-line" aria-hidden="true"></div>
        <h2 class="mt-4 text-xl font-bold sm:text-2xl">{t("download.tips.title")}</h2>
        <p class="text-offset">{t("download.tips.text")}</p>
      </article>
    </section>
  </section>
</BaseLayout>


