---
import BaseLayout from "~/layouts/base-layout.astro";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout
  title={t("products.title")}
  description={t("products.description")}
  lang={lang}
>
  <div class="space-y-10">
    <header class="space-y-4">
      <h1 class="text-3xl font-extrabold tracking-tight sm:text-5xl">
        {t("products.heading")}
      </h1>
      <p class="max-w-2xl text-offset">{t("products.lead")}</p>
    </header>

    <section class="space-y-4">
      <h2 class="text-xl font-bold sm:text-2xl">
        {t("products.deviceTypes.title")}
      </h2>
      <ul class="list-disc space-y-2 pl-6 text-offset">
        <li>{t("products.deviceTypes.monitorBacklight")}</li>
        <li>{t("products.deviceTypes.deskLamp")}</li>
        <li>{t("products.deviceTypes.floorLamp")}</li>
        <li>{t("products.deviceTypes.peripherals")}</li>
        <li>{t("products.deviceTypes.pcCase")}</li>
      </ul>
      <p class="text-sm text-offset">{t("products.note")}</p>
    </section>
  </div>
</BaseLayout>


