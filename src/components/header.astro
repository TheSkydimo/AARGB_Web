---
import { Icon } from "astro-icon/components";
import LanguagePicker from "~/components/language-picker.astro";
import ThemeSwitcher from "~/components/theme-switcher.astro";
import { getLangFromUrl, useTranslations, useTranslatedPath } from "~/i18n/utils";
import type { NavItem } from "~/types";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const navItems: Array<NavItem> = [
  { title: t("nav.home"), url: translatePath("/") },
  { title: t("nav.products"), url: translatePath("/products/") },
  { title: t("nav.features"), url: translatePath("/features/") },
  { title: t("nav.about"), url: translatePath("/about/") },
];
---

<header
  id="page-header"
  class="sticky top-0 z-20 w-full px-4 py-3 text-default sm:px-8"
>
  <div class="header-shell">
    <a class="brand hover:!text-default" href={translatePath("/")}>
      <span class="sr-only">AARGB</span>
      <img
        src="/images/LOGO.png"
        alt="AARGB"
        class="h-10 w-auto"
        loading="eager"
        decoding="async"
      />
      <span class="hidden text-base font-semibold tracking-[0.25em] sm:block"
        >AARGB</span
      >
    </a>

    <div class="flex items-center gap-4 sm:gap-6">
      <nav class="hidden sm:block">
        <ul class="nav-list">
          {
            navItems.map(({ title, url }) => (
              <li>
                <a class="nav-link" href={url}>
                  {title}
                </a>
              </li>
            ))
          }
          <li class="nav-divider" aria-hidden="true"></li>
          <li class="nav-lang">
            <LanguagePicker />
          </li>
        </ul>
      </nav>

      <button
        id="open-nav-button"
        type="button"
        class="btn sm:hidden"
        aria-label="Navigation"
      >
        <Icon name="mdi:menu" class="size-8" />
      </button>

      <ThemeSwitcher />
    </div>
  </div>

  <div id="menu-modal" class="modal hidden" aria-hidden="true">
    <div class="fixed inset-0 bg-default px-8 py-4 text-default">
      <div class="space-y-4" role="dialog" aria-modal="true">
        <header class="text-right">
          <button
            id="close-nav-button"
            type="button"
            class="btn"
            aria-label="Close navigation"
          >
            <Icon name="mdi:close" class="size-8" />
          </button>
        </header>
        <div class="flex justify-center">
          <img
            src="/images/LOGO.png"
            alt="AARGB"
            class="h-16 w-auto"
            loading="eager"
            decoding="async"
          />
        </div>
        <nav>
          <ul class="flex flex-col">
            {
              navItems.map(({ title, url }) => (
                <li>
                  <a class="block py-4 text-center text-xl" href={url}>
                    {title}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
        <div class="flex justify-center pt-4">
          <LanguagePicker />
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import MicroModal from "micromodal";
  import invariant from "tiny-invariant";

  const menuModalId = "menu-modal";

  const menu = document.querySelector(`#${menuModalId} ul`);
  const openNavButton = document.querySelector("#open-nav-button");
  const closeNavButton = document.querySelector("#close-nav-button");

  invariant(menu, "menu should not be null");
  invariant(openNavButton, "openNavButton should not be null");
  invariant(closeNavButton, "closeNavButton should not be null");

  const openMenu = () => {
    MicroModal.show(menuModalId, { disableScroll: true });
  };

  const closeMenu = () => {
    MicroModal.close(menuModalId);
  };

  openNavButton.addEventListener("click", openMenu);
  closeNavButton.addEventListener("click", closeMenu);

  menu.addEventListener("click", (event) => {
    if ((event.target as HTMLElement).tagName === "A") {
      closeMenu();
    }
  });
</script>

<noscript>
  <style>
    #open-nav-button {
      display: none;
    }
  </style>
</noscript>

<style>
  .modal.is-open {
    @apply block;
  }

  .header-shell {
    @apply mx-auto flex w-full max-w-7xl items-center justify-between rounded-full border border-default px-5 py-3;
    background: color-mix(in srgb, var(--color-background) 88%, transparent);
    backdrop-filter: blur(10px);
  }

  .brand {
    @apply flex items-center gap-3 rounded-full px-2 py-1;
  }

  .nav-list {
    @apply flex items-center gap-6;
  }

  .nav-link {
    @apply transition-colors duration-200;
    @apply hover:text-secondary;
    @apply focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-secondary focus-visible:ring-offset-2 focus-visible:ring-offset-transparent;
    @apply text-base text-default;
  }

  .nav-divider {
    @apply h-4 w-px bg-default;
  }

  .nav-lang {
    @apply flex items-center;
  }
</style>
